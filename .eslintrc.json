{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": { 
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-console": "error",
      "@typescript-eslint/no-explicit-any": "warn"
    },
  "overrides": [
    {
      "extends": ["plugin:@typescript-eslint/disable-type-checked"],
      "files": ["./src/**/*.spec.ts"]
    }
  ]
}
